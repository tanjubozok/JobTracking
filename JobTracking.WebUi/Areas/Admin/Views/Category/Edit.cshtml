@model CategoryUpdateDto
@{
    ViewBag.Title = "Kategori Düzenle";
}
@section Scripts {
    <partial name="_ValidationScripts" />
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                            Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        @ViewBag.Title
                    </li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name">Kategori Adı</label>
                                <input asp-for="Name" class="form-control rounded-0" placeholder="kategori adı">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Kategori Rengi</label>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="warning" name="Color" value="warning" asp-for="Color">
                                    <label class="custom-control-label" for="warning">
                                        <span class="badge badge-warning" style="font-size:80%;">
                                            Sarı
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="primary" name="Color" value="primary" checked asp-for="Color">
                                    <label class="custom-control-label" for="primary">
                                        <span class="badge badge-primary" style="font-size:80%;">
                                            Mavi
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="secondary" name="Color" value="secondary" asp-for="Color">
                                    <label class="custom-control-label" for="secondary">
                                        <span class="badge badge-secondary" style="font-size:80%;">
                                            Gri
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="success" name="Color" value="success" asp-for="Color">
                                    <label class="custom-control-label" for="success">
                                        <span class="badge badge-success" style="font-size:80%;">
                                            Yeşil
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="info" name="Color" value="info" asp-for="Color">
                                    <label class="custom-control-label" for="info">
                                        <span class="badge badge-info" style="font-size:80%;">
                                            Açık Mavi
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="danger" name="Color" value="danger" asp-for="Color">
                                    <label class="custom-control-label" for="danger">
                                        <span class="badge badge-danger" style="font-size:80%;">
                                            Kırmızı
                                        </span>
                                    </label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="dark" name="Color" value="dark" asp-for="Color">
                                    <label class="custom-control-label" for="dark">
                                        <span class="badge badge-dark" style="font-size:80%;">
                                            Siyah
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Category" asp-action="List" class="btn btn-secondary btn-flat">
                                <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
                                Listeye Geri Dön
                            </a>
                            <button type="submit" class="btn btn-warning btn-flat">
                                <i class="fa fa-save" aria-hidden="true"></i>
                                Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>